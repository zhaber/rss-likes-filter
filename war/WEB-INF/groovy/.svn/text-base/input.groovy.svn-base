html.html {
	head { title "Google Reader Likes Filter" }
	body (style: "padding: 0px; margin: 0px auto;"){
			form (method : 'GET', action : '/getFeed') {
				table(border : "0", style:"position: absolute;top: 28%;width:100%") {
					tr() {
						td(colspan:4, style:"text-align:center"){
							p(style:"font-size:18px","Google Reader Likes Filter")
							p()
						}
					}
					tr() {
						td(style:"width:48%");
						td("Feed url:");
						td() {
							input(type : "text", name: "rss", style:"width: 235px", value: "" )
						}
						td(style:"width:100%");
					}
					tr() {
						td();
						td() {
							yieldUnescaped 'Minimum&nbsp;Likes:'
						}
						td() {
							input(type : "text", name: "likes", value: 10, style:"width: 148px");
							input(type: "submit", value: "Get Feed");
						}
					}
					tr() {
						td();
						td();
						td(align:"right") {
							br();
							span(style:"font-size:13px", "Created by");
							a(style: "font-size:13px", "Vitalii Fedorenko", href: "http://zhaber.blogspot.com/");
						}
					}
				}
		}
		script("var _gaq = _gaq || [];" +
			  "_gaq.push(['_setAccount', 'UA-18702814-1']); " +
			  "_gaq.push(['_trackPageview']);"+
			  "(function() {" +
			  "	var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;" +
		      "ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';" +
			  "	var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);" +
			  "})();")			
	}
}